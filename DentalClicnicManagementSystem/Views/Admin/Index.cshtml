                 e.preventDefault();
                 var range = $(this).data('range');
                 var text = $(this).text();

                 // Mettre à jour le texte du bouton
                 $('#popular-doctors-dropdown-btn').html(text + ' <i class="ti ti-chevron-down ms-1"></i>');

                 // Récupérer les nouvelles données
                 $.ajax({
                     url: '@Url.Action("GetPopularDoctors", "Admin")',
                     type: 'GET',
                     data: { range: range },
                     success: function (response) {
                         $('#popular-doctors-list').html(response);
                     },
                     error: function () {
                         $('#popular-doctors-list').html('<p class="text-danger">Impossible de charger les médecins.</p>');
                     }
                 });
             });

    </script>
