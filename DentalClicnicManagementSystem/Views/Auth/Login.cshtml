    <script>
        /* vanilla-js eye-toggle – no dependencies */
        (function () {
            /* wait until everything is parsed */
            document.addEventListener('DOMContentLoaded', function () {

                /* delegate a single click listener to the whole document */
                document.addEventListener('click', function (e) {
                    /* only react if the clicked element is the eye-icon */
                    if (!e.target.classList.contains('toggle-password')) return;
                    console.log("cahlaya e ")
                    const icon  = e.target;
                    /* find the INPUT that sits in the same input-group */
                    const input = icon.closest('.pass-group')?.querySelector('.pass-input');

                    if (!input) return;          // safety – element not found

                    /* toggle type + classes */
                    if (input.type === 'password') {
                        input.type = 'password' === 'text' ? 'password' : 'text';   // prettier
                        icon.classList.remove('ti-eye-off');
                        icon.classList.add('ti-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('ti-eye-slash');
                        icon.classList.add('ti-eye-off');
                    }
                });

            });
        }());
