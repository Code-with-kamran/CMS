@section Scripts {

    <script>
        $(function () {
            const token = $('#__af input[name="__RequestVerificationToken"]').val();

            // Tear down if already bound
            if ($.fn.DataTable.isDataTable('#doctorList')) {
                $('#doctorList').DataTable().destroy();
            }

            const esc = (s) => (s == null ? '' : String(s));

            const table = $('#doctorList').DataTable({
                processing: false,
                serverSide: true,
                ajax: { url: '@Url.Action("GetDoctorsData", "Doctor")', type: 'GET' },

                // Build table + info + pager (we will move them)
                dom: 'rtip',
                paging: true,
                pagingType: 'simple_numbers',     // cleaner: Prev 1 2 3 Next (no First/Last)
                info: true,
                order: [[0, 'asc']],
                autoWidth: false,

                       responsive: {
            details: { type: 'inline', target: 'tr' },
            breakpoints: [
                { name: 'desktop', width: Infinity },
                { name: 'laptop',  width: 1200 },
                { name: 'tablet',  width: 992  },
                { name: 'phablet', width: 768  },
                { name: 'phone',   width: 576  },
                { name: 'tiny',    width: 0    }
            ]
        },

               

                columnDefs: [
                    { targets: 0, responsivePriority: 1 },
                    { targets: 5, responsivePriority: 2, className: 'text-center' },
                    { targets: [2,3], responsivePriority: 3 },
                    { targets: [1,4], responsivePriority: 4 }
                ],

                columns: [
                    /* 0 Name & Designation */
                    {
                        data: 'fullName',
                        orderable: true,
                        render: function (data, type, row) {
                            const img = row.profileImageUrl || '/uploads/doctors/default.jpg';
                            return `
                              <div class="d-flex align-items-center min-w-0">
                                <a href="/Doctor/Profile/${row.id}" class="avatar me-2">
                                  <img src="${img}" class="rounded-circle" style="width:40px;height:40px;" alt="Doctor">
                                </a>
                                <div class="min-w-0">
                                  <div class="fw-semibold text-truncate d-block">
                                    <a href="/Doctor/Profile/${row.id}" class="text-primary">${esc(row.fullName)}</a>
                                  </div>
                                  <small class="text-muted small text-truncate d-block">${esc(row.designation || '')}</small>
                                </div>
                              </div>`;
                        }
                    },
                    /* 1 Specialty */
                    {
                        data: 'specialty',
                        orderable: true,
                        render: d => `<span class="text-truncate" title="${esc(d)}">${esc(d)}</span>`
                    },
                    /* 2 Phone */
                    {
                        data: 'phone',
                        orderable: false,
                        render: d => `<span class="text-truncate" title="${esc(d)}">${esc(d)}</span>`
                    },
                    /* 3 Email */
                    {
                        data: 'email',
                        orderable: false,
                        render: d => `<span class="text-truncate" title="${esc(d)}">${esc(d)}</span>`
                    },
                    /* 4 Created On */
                    {
                        data: 'addedDateTime',
                        orderable: true,
                        render: function (data) {
                            if (!data || String(data).startsWith('0001-01-01')) return '';
                            const d = new Date(data);
                            return isNaN(d) ? '' :
                                   d.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
                        }
                    },
                    /* 5 Actions (dropdown) */
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            return `
                                <div class="dropdown d-inline-block">
                                    <a href="javascript:void(0);"
                                       class="shadow-sm fs-14 d-inline-flex border rounded-2 p-1"
                                       data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu p-2 dropdown-menu-end">
                                        <li>
                                            <a href="/Doctor/Upsert/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-edit me-2"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);"
                                               class="dropdown-item d-flex align-items-center js-delete "
                                               data-url="/Doctor/Delete"
                                               data-table="doctorList"
                                               data-id="${row.id}"
                                               data-name="${esc(row.fullName)}">
                                                <i class="ti ti-trash me-2"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>`;
                        }
                    }
                ],

                // Move pager; write our own info string so it always shows
                drawCallback: function () {
                    $('#doctorList tbody tr.pre-load').remove()
                    const api = this.api();

                    // move DT pager to our container
                    const pagerEl = $(api.table().container()).find('.dataTables_paginate');
                    if (pagerEl.length) $('#dt-pager').empty().append(pagerEl);

                    // replace Prev/Next labels with chevrons (safer here after render)
                    $('#dt-pager .paginate_button.previous .page-link').html('&lsaquo;');
                    $('#dt-pager .paginate_button.next .page-link').html('&rsaquo;');

                    // robust info text
                    const info = api.page.info(); // {start,end,recordsTotal,recordsDisplay,...}
                    const msg = info.recordsDisplay
                      ? `Showing ${info.start + 1} to ${info.end} of ${info.recordsDisplay.toLocaleString()} entries`
                      : (info.recordsTotal
                          ? `Showing 0 to 0 of ${info.recordsTotal.toLocaleString()} entries`
                          : 'No entries to show');
                    $('#dt-info').text(msg);
                },

                language: {
                    emptyTable: "No doctors found"
                    
                }
            });


        $('#doctorList tbody').html(
          `<tr class="pre-load"><td colspan="9" class="text-center py-5">
             <div class="spinner-border avatar-lg text-primary m-2" role="status"></div>
           </td></tr>`
        );
            // External controls
            $('#globalSearch').on('input', function () {
                table.search(this.value).draw();
            });
            $('#pageLength').on('change', function () {
                table.page.len(parseInt(this.value, 10)).draw();
            });

            // DELETE HANDLER - THIS WAS MISSING IN YOUR DOCTOR VIEW
            $(document).on('click', '.js-delete', function () {
                const id = $(this).data('id');
                const name = $(this).data('name') || 'this doctor';

                Swal.fire({
                    title: `Delete ${name}?`,
                    text: 'You will not be able to revert this!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#aaa',
                    confirmButtonText: 'Yes, delete!'
                }).then(res => {
                    if (res.isConfirmed) {
                        $.ajax({
                            url: `/Doctor/Delete/${id}`,
                            type: 'POST',
                            headers: { 'RequestVerificationToken': token },
                            success: r => {
                                if (r.status) {
                                    Swal.fire('Deleted', r.message, 'success');
                                    table.ajax.reload(null, false);
                                } else {
                                    Swal.fire('Error', r.message || 'Delete failed', 'error');
                                }
                            },
                            error: () => Swal.fire('Error', 'Something went wrong', 'error')
                        });
                    }
                });
            });
        });
    </script>
