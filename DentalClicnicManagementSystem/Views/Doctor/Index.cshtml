@model IEnumerable<CMS.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<div class="main-wrapper">
    <div class="page-wrapper  m-0">
        <div class="content">
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">
                        Doctor Grid
                        <span class="badge badge-soft-primary fs-13 fw-medium ms-2">Total Doctors : @Model.Count()</span>
                    </h4>
                </div>
                <div class="text-end">
                    <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary ms-2 fs-13 btn-md">
                        <i class="ti ti-plus me-1"></i>New Doctor
                    </a>
                </div>
            </div>

            <div class="row">
                @foreach (var doctor in Model)
                {
                    <div class="col-xl-4 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex align-items-center flex-sm-nowrap flex-wrap row-gap-3">
                                <div class="me-3 doctor-profile-img">
                                    <img src="@doctor.ProfileImageUrl" class="rounded" alt="@doctor.FullName" style="width:80px; height:80px;" />
                                </div>
                                <div class="flex-fill">
                                    <div class="d-flex align-items-center justify-content-between mb-1">
                                        <h6 class="mb-0 fw-semibold">@doctor.FullName</h6>
                                        <div class="action-item dropdown">
                                            <a href="#" data-bs-toggle="dropdown"><i class="ti ti-dots-vertical"></i></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="dropdown-item d-flex align-items-center">Edit</a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0)"
                                                       class="btn btn-sm btn-danger js-delete"
                                                       data-url="@Url.Action("Delete", "Doctor", new { id = doctor.Id })"
                                                       data-name="@doctor.FullName">
                                                        <i class="ti ti-trash"></i>
                                                    </a>

                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <span class="d-block mb-2 fs-13">@doctor.Specialty</span>

                                    <p class="mb-1 fs-13 text-muted"><strong>Email:</strong> @doctor.Email</p>
                                    <p class="mb-1 fs-13 text-muted"><strong>Phone:</strong> @doctor.Phone</p>
                                    <p class="mb-1 fs-13 text-muted"><strong>Address:</strong> @doctor.Address</p>

                                    <p class="mb-2 fs-13 ">
                                        <strong>About:</strong>
                                        <div class="text-muted" style="max-height: 40px; overflow: hidden; text-overflow: ellipsis;">
                                            @{
                                                var aboutText = doctor.About ?? "";
                                                var shortAbout = aboutText.Length > 10
                                                ? aboutText.Substring(0, 10) + "..."
                                                : aboutText;
                                            }
                                            @shortAbout
                                        </div>
                                    </p>


                                    <div class="d-flex align-items-center justify-content-end">
                                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function () {
          // Anti-forgery token from the hidden form
          const tokenInput = document.querySelector('#__af input[name="__RequestVerificationToken"]');

          document.addEventListener('click', async function (e) {
            const btn = e.target.closest('.js-delete');
            if (!btn) return;

            const url  = btn.dataset.url;
            const name = btn.dataset.name || 'this record';
            const row  = btn.closest('tr'); // if your items are in a table

            // === YOUR EXACT SWEETALERT SNIPPET (wrapped to run on click) ===
            Swal.fire({
              title: "Are you sure?",
              text: "You won't be able to revert this!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Yes, delete it!"
            }).then(async (result) => {
              if (!result.isConfirmed) return;

              // Perform the actual delete (AJAX POST)
              try {
                const res = await fetch(url, {
                  method: 'POST',
                  headers: {
                    'RequestVerificationToken': tokenInput ? tokenInput.value : '',
                    'X-Requested-With': 'XMLHttpRequest'
                  }
                });
                const data = await res.json();

                if (data.status) {
                  // Optional: remove row instantly, or reload
                  // Success alert (as you provided)
                  Swal.fire({
                    title: "Deleted!",
                    text: "Your file has been deleted.",
                    icon: "success"
                  }).then(() => {
          location.reload(); // full page refresh
        });} else {
                  Swal.fire({
                    icon: "error",
                    title: "Not deleted",
                    text: data.message || "Something went wrong."
                  });
                }
              } catch (err) {
                Swal.fire({
                  icon: "error",
                  title: "Not deleted",
                  text: "Network or server error."
                });
              }
            });
          });
        })();
    </script>

}
                                                                                                                                                                                                                                                                                                                                                                    