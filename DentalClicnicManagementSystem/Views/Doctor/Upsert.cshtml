@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // ------------------- Image Preview -----------------------
        const currentImage = '@currentImage';
        document.getElementById('ProfileImage')?.addEventListener('change', function () {
            const output = document.getElementById('imagePreview');
            if (this.files && this.files[0]) {
                const reader = new FileReader();
                reader.onload = (evt) => output.src = evt.target.result;
                reader.readAsDataURL(this.files[0]);
            } else {
                output.src = currentImage || defaultImage;
            }
        });


        const isEditMode = @(Model.Doctor.Id != 0 ? "true" : "false");

        // Remove required validation for password fields in edit mode
        if (isEditMode) {
            document.addEventListener('DOMContentLoaded', function() {
                const passwordField = document.querySelector('#Doctor_Password');
                const confirmPasswordField = document.querySelector('#Doctor_ConfirmPassword');

                if (passwordField) {
                    passwordField.removeAttribute('data-val-required');
                    passwordField.placeholder = "Leave blank to keep current password";
                }

                if (confirmPasswordField) {
                    confirmPasswordField.removeAttribute('data-val-required');
                    confirmPasswordField.removeAttribute('data-val-equalto');
                }
            });
        }
        // ------------------- Bootstrap Validation -----------------------
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // ------------------- Toggle Password Visibility -----------------------
        function togglePw(id) {
            const el = document.getElementById(id);
            if (el) el.type = el.type === 'password' ? 'text' : 'password';
        }

        // ------------------- Remove Dynamic Row -----------------------
        function removeRow(btn) {
            const row = btn.closest('.row');
            if (row) row.remove();
        }

        // ------------------- Add Weekly Row -----------------------
        function addWeekly() {
            const c = document.getElementById('weeklyContainer');
            const idx = c.querySelectorAll('.weekly-row').length;

            const html = `
            <div class="row g-2 align-items-end mb-2 weekly-row">
              <div class="col-5">
                <label class="form-label">Day</label>
                <select class="form-select" name="WeeklyAvailabilities[${idx}].DayOfWeek">
                  ${['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']
                    .map(d => `<option value="${d}">${d}</option>`).join('')}
                </select>
              </div>
              <div class="col-3">
                <label class="form-label">Start</label>
                <input type="time" class="form-control"
                       name="WeeklyAvailabilities[${idx}].StartTime"
                       value="09:00" />
              </div>
              <div class="col-3">
                <label class="form-label">End</label>
                <input type="time" class="form-control"
                       name="WeeklyAvailabilities[${idx}].EndTime"
                       value="17:00" />
              </div>
              <div class="col-1 text-end">
                <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRow(this)">✕</button>
              </div>
              <input type="hidden" name="WeeklyAvailabilities[${idx}].IsWorkingDay" value="true" />
            </div>`;

            c.insertAdjacentHTML('beforeend', html);
        }

        // ------------------- Prefill Weekly Availability -----------------------
        function prefillWeekly(days) {
            const container = document.getElementById('weeklyContainer');
            container.innerHTML = '';

            const startTime = '09:00';
            const endTime = '17:00';
            const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];

            let daysToFill = days === 5 ? ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'] : daysOfWeek;

            daysToFill.forEach((day, index) => {
                const html = `
                <div class="row g-2 align-items-end mb-2 weekly-row">
                    <div class="col-5">
                        <label class="form-label">Day</label>
                        <select class="form-select" name="WeeklyAvailabilities[${index}].DayOfWeek">
                            ${daysOfWeek.map(d => `<option value="${d}" ${d === day ? 'selected' : ''}>${d}</option>`).join('')}
                        </select>
                    </div>
                    <div class="col-3">
                        <label class="form-label">Start</label>
                        <input type="time" class="form-control"
                               name="WeeklyAvailabilities[${index}].StartTime"
                               value="${startTime}" />
                    </div>
                    <div class="col-3">
                        <label class="form-label">End</label>
                        <input type="time" class="form-control"
                               name="WeeklyAvailabilities[${index}].EndTime"
                               value="${endTime}" />
                    </div>
                    <div class="col-1 text-end">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRow(this)">✕</button>
                    </div>
                    <input type="hidden" name="WeeklyAvailabilities[${index}].IsWorkingDay" value="true" />
                </div>`;

                container.insertAdjacentHTML('beforeend', html);
            });

            // Show success message
            toastr.success(`Prefilled ${days} days of weekly availability!`);
        }

        // ------------------- Add Date Availability -----------------------
        function addDate() {
            const c = document.getElementById('dateContainer');
            const i = c.querySelectorAll('.date-row').length;
            const today = new Date().toISOString().slice(0, 10);
            c.insertAdjacentHTML('beforeend', `
            <div class="row g-2 align-items-end mb-2 date-row">
                <div class="col-5">
                    <label class="form-label">Date</label>
                    <input class="form-control" type="date" name="DateAvailabilities[${i}].Date" value="${today}" />
                </div>
                <div class="col-3">
                    <label class="form-label">Start</label>
                    <input class="form-control" type="time" name="DateAvailabilities[${i}].StartTime" value="09:00" />
                </div>
                <div class="col-3">
                    <label class="form-label">End</label>
                    <input class="form-control" type="time" name="DateAvailabilities[${i}].EndTime" value="17:00" />
                </div>
                <div class="col-1 text-center pb-1">
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRow(this)">✕</button>
                </div>
                <input type="hidden" name="DateAvailabilities[${i}].IsAvailable" value="true" />
            </div>`);
        }

        // ------------------- Add Education -----------------------
        function addEdu() {
            const c = document.getElementById('eduContainer');
            const i = c.querySelectorAll('.edu-row').length;
            c.insertAdjacentHTML('beforeend', `
            <div class="row g-2 align-items-end mb-2 edu-row">
                <div class="col-5">
                    <label class="form-label">Degree</label>
                    <input class="form-control" name="Educations[${i}].Degree" />
                </div>
                <div class="col-4">
                    <label class="form-label">Institution</label>
                    <input class="form-control" name="Educations[${i}].Institution" />
                </div>
                <div class="col-2">
                    <label class="form-label">Year</label>
                    <input class="form-control" type="number" name="Educations[${i}].Year" />
                </div>
                <div class="col-1 text-center pb-1">
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRow(this)">✕</button>
                </div>
            </div>`);
        }

        // ------------------- Add Award -----------------------
        function addAward() {
            const c = document.getElementById('awardContainer');
            const i = c.querySelectorAll('.award-row').length;
            c.insertAdjacentHTML('beforeend', `
            <div class="row g-2 align-items-end mb-2 award-row">
