            $('#globalSearch').on('input', function () {
                empTable.search(this.value).draw();
            });

            $('#pageLength').on('change', function () {
                empTable.page.len(parseInt(this.value, 10)).draw();
            });

            /* Employee delete handler */
            $(document).on('click', '.js-delete-emp', function () {
                const url = $(this).data('url'),
                      name = $(this).data('name');

                Swal.fire({
                    title: `Deactivate ${name}?`,
                    text: 'Employee will be marked as Inactive.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#aaa',
                    confirmButtonText: 'Yes, deactivate!'
                }).then(res => {
                    if (res.isConfirmed) {
                        const token = $('form#__af input[name="__RequestVerificationToken"]').val();
                        $.ajax({
                            url: url,
                            type: 'POST',
                            headers: { 'RequestVerificationToken': token },
                            success: r => {
                                if (r.status) {
                                    Swal.fire('Deactivated', r.message, 'success');
                                    empTable.ajax.reload(null, false);
                                } else {
                                    Swal.fire('Error', r.message || 'Action failed', 'error');
                                }
                            },
                            error: () => Swal.fire('Error', 'Something went wrong', 'error')
                        });
                    }
                });
            });

            /* Restore employee handler */
            $(document).on('click', '.js-restore-emp', function () {
                const url = $(this).data('url'),
                      name = $(this).data('name');

                Swal.fire({
                    title: `Restore ${name}?`,
                    text: 'Employee will be reactivated and visible in active lists.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#aaa',
                    confirmButtonText: 'Yes, restore!'
                }).then(res => {
                    if (res.isConfirmed) {
                        const token = $('form#__af input[name="__RequestVerificationToken"]').val();
                        $.ajax({
                            url: url,
                            type: 'POST',
                            headers: { 'RequestVerificationToken': token },
                            success: r => {
                                if (r.status) {
                                    Swal.fire('Restored', r.message, 'success');
                                    empTable.ajax.reload(null, false);
                                } else {
                                    Swal.fire('Error', r.message || 'Action failed', 'error');
                                }
                            },
                            error: () => Swal.fire('Error', 'Something went wrong', 'error')
                        });
                    }
                });
            });

            /* Permanent delete handler */
            $(document).on('click', '.js-permanent-delete-emp', function () {
                const url = $(this).data('url'),
                      name = $(this).data('name');

                Swal.fire({
                    title: `Permanently Delete ${name}?`,
                    text: 'This action cannot be undone! This will permanently remove the employee from the system.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#aaa',
                    confirmButtonText: 'Yes, delete permanently!',
                    dangerMode: true
                }).then(res => {
                    if (res.isConfirmed) {
                        const token = $('form#__af input[name="__RequestVerificationToken"]').val();
