                                    Swal.fire('Error', r.message || 'Delete failed', 'error');
                                }
                            },
                            error: () => Swal.fire('Error', 'Something went wrong', 'error')
                        });
                    }
                });
            });

            /* Export CSV button - default to active employees */
            

            // Make empTable global for the pagination buttons
