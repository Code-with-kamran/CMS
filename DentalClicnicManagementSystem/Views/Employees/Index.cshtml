            // Fonction de pagination personnalisée
            function updatePaginationInfo() {
                const info = empTable.page.info();
                const statusText = currentStatus === 'active' ? 'Actifs' : 'Désactivés';

                // Mettre à jour le texte d'information
                const infoText = info.recordsDisplay
                    ? `Affichage de ${info.start + 1} à ${info.end} sur ${info.recordsDisplay.toLocaleString('fr-FR')} entrées ${statusText.toLowerCase()}`
                    : `Aucun employé ${statusText.toLowerCase()} trouvé`;
                $('#dt-info').text(infoText);

                // Construire la pagination personnalisée
                const totalPages = info.pages;
                const currentPage = info.page;
                let paginationHtml = '';

                // Bouton Précédent
                paginationHtml += `<button class="btn btn-sm btn-outline-white me-1 ${currentPage === 0 ? 'disabled' : ''}"
                    ${currentPage === 0 ? 'disabled' : ''} onclick="empTable.page('previous').draw('page')">
                    &lsaquo;
                </button>`;

                // Numéros de page
                for (let i = 0; i < totalPages; i++) {
                    if (i === currentPage) {
                        paginationHtml += `<button class="btn btn-sm btn-primary mx-1">${i + 1}</button>`;
                    } else {
                        paginationHtml += `<button class="btn btn-sm btn-outline-white mx-1"
                            onclick="empTable.page(${i}).draw('page')">${i + 1}</button>`;
                    }
                }

                // Bouton Suivant
                paginationHtml += `<button class="btn btn-sm btn-outline-white ms-1 ${currentPage === totalPages - 1 ? 'disabled' : ''}"
                    ${currentPage === totalPages - 1 ? 'disabled' : ''} onclick="empTable.page('next').draw('page')">
                    &rsaquo;
                </button>`;

                $('#dt-pager').html(paginationHtml);
            }

