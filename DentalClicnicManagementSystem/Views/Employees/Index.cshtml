                    },
                    {
                        data: 'hireDate',
                        orderable: true,
                        render: d => {
                            if (!d) return '';
                            const dt = new Date(d);
                            return isNaN(dt) ? d : dt.toLocaleDateString('en-GB', {
                                day: '2-digit',
                                month: 'short',
                                year: 'numeric'
                            });
                        }
                    },
                    {
                        data: 'baseSalary',
                        orderable: true,
                            render: function(d) {
            const salary = parseFloat(d || 0);
            return `${currentCurrencySymbol}${salary.toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
        }  },
