                        data: null,
                        orderable: true,
                        render: function(data, type, row) {
                            return `<span class="fw-semibold">${esc(row.firstName)} ${esc(row.lastName)}</span>`;
                        }
                    },
                    {
                        data: 'email',
                        orderable: true,
                        render: d => `<span class="truncate truncate-220">${esc(d)}</span>`
                    },
                    {
                        data: 'phoneNumber',
                        orderable: true,
                        render: d => `<span class="truncate truncate-180">${esc(d)}</span>`
                    },
                    {
                        data: 'designation',
                        orderable: true,
                        render: function(data, type, row) {
                            return esc(data || '');
