@{
    ViewData["Title"] = "Inventory Items";
}
<form id="__af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">
            <!-- Header -->
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">Inventory Grid</h4>
                </div>
                <div class="text-end">
                    <a asp-controller="Inventory" asp-action="Upsert" class="btn btn-primary ms-2 fs-13 btn-md">
                        <i class="ti ti-plus me-1"></i>New Item
                    </a>
                </div>
                @* CSV button *@
                <button id="exportCsvBtn" class="btn btn-secondary ms-2 fs-13 btn-md">
                    <i class="ti ti-download me-1"></i> Export CSV
                </button>
            </div>

            <!-- Card -->
            <div class="card">
                <div class="card-body">
                    <!-- External controls -->
                    <div class="row g-2 mb-3 align-items-center">
                        <!-- page-length: hidden on mobile -->
                        <div class="col-auto d-none d-sm-flex align-items-center">
                            <label class="me-2 mb-0">Show</label>
                            <select id="pageLength" class="form-select form-select-sm" style="min-width:90px">
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ms-2">entries</span>
                        </div>

                        <!-- search: full width on mobile -->
                        <div class="col-12 col-sm ms-sm-auto" style="max-width:260px">
                            <input id="globalSearch" type="search" class="form-control form-control-sm" placeholder="Search" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="inventoryList" class="table table-hover align-middle w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Item Name &amp; SKU</th>
                                    <th>Category</th>
                                    <th>Stock</th>
                                    <th>Unit Price</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Footer: info + pager -->
                    <div class="row align-items-center g-2 mt-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted" id="dt-info"></div>
                        </div>
                        <div class="col-12 col-sm-6 d-flex justify-content-sm-end">
                            <div id="dt-pager"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===== Truncation helpers ===== */
    .truncate {
        display: inline-block;
        vertical-align: middle;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

