                    <div class="invoice-number">#@Model.InvoiceNumber</div>
                    <div>Date d'Émission : @Model.IssueDate.ToString("dd MMMM yyyy")</div>
                    <div>Date d'Échéance : @Model.DueDate.ToString("dd MMMM yyyy")</div>
                </div>
            </div>
        </div>

        <div class="billing-info">
            <div class="info-card">
                <h3>Facturé à :</h3>
                <div>@Model.CustomerName</div>
                <div>@Model.CustomerAddress</div>
            </div>
            <div class="info-card">
                <h3>Résumé de la Facture :</h3>
                <div>Statut : <strong>@(DateTime.Now <= Model.DueDate ? "En Attente" : "En Retard")</strong></div>
