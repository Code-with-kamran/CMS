@* @model Invoice
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Invoice Receipt - A4</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 10;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        /* Container for A4 sizing */
        .a4-container {
            max-width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            background: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 25px;
            position: relative;
        }

        /* Header Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e9ecef;
        }

        .company-details h2 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 24px;
        }

        .company-contact {
            color: #7f8c8d;
            font-size: 14px;
            line-height: 1.4;
        }

        .invoice-details h1 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 28px;
        }

        .invoice-meta {
            text-align: right;
            color: #7f8c8d;
            font-size: 14px;
        }

        .invoice-number {
            font-size: 18px;
            font-weight: bold;
            color: #3498db;
            margin-bottom: 5px;
        }

        /* Print Actions */
        .print-actions {
            margin-bottom: 20px;
            text-align: right;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn:hover {
                background: #2980b9;
            }

        /* Section Styles */
        .section {
            margin-bottom: 25px;
        }

        .section-title {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid #e9ecef;
            font-size: 16px;
        }

        .billing-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 25px;
        }

        .info-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
            border-left: 4px solid #3498db;
        }

            .info-card h3 {
                color: #2c3e50;
                margin-bottom: 10px;
                font-size: 16px;
            }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 14px;
        }

        th {
            background: #34495e;
            color: white;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
        }

        td {
            padding: 12px 15px;
            border-bottom: 1px solid #e9ecef;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        tfoot tr {
            background: #f8f9fa;
        }

        .total-row {
            font-weight: bold;
            color: #2c3e50;
        }

            .total-row td {
                border-top: 2px solid #e9ecef;
                border-bottom: none;
            }

        .text-right {
            text-align: right;
        }

        /* Footer Styles */
        .footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #e9ecef;
            text-align: center;
            color: #7f8c8d;
            font-size: 14px;
        }

        .payment-info {
            background: #e8f4fc;
            padding: 15px;
            border-radius: 6px;
            margin-top: 20px;
            text-align: center;
            border: 1px dashed #3498db;
        }

        /* Print Styles */
        @@media print {
            body {
                background: white;
                padding: 0;
            }

            .a4-container {
                box-shadow: none;
                padding: 0;
                max-width: 100%;
                min-height: auto;
            }

            .print-actions {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="print-actions">
        <button class="btn" onclick="window.print()"> <i class="ti ti-printer me-1"></i>Print Invoice</button>
    </div>

    <div class="a4-container">
        <div class="header">
           <div class="company-details">
    <img src="~/assets/img/CABINET-DENTAIRE-CORVIL.png" alt="Company Logo" style="height:60px; margin-bottom:10px; display:block;">
    <h2>@ViewData["CompanyName"]</h2>
    <div class="company-contact">
        <div>@ViewData["CompanyAddress"]</div>
        <div>@ViewData["CompanyPhone"]</div>
    </div>
</div>
            <div class="invoice-details">
                <h1>INVOICE</h1>
                <div class="invoice-meta">
                    <div class="invoice-number">#@Model.InvoiceNumber</div>
                    <div>Issue Date: @Model.IssueDate.ToString("MMMM dd, yyyy")</div>
                    <div>Due Date: @Model.DueDate.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>
        </div>

        <div class="billing-info">
            <div class="info-card">
                <h3>Bill To:</h3>
                <div>@Model.CustomerName</div>
                <div>@Model.CustomerAddress</div>
            </div>
            <div class="info-card">
                <h3>Invoice Summary:</h3>
                <div>Status: <strong>@(DateTime.Now <= Model.DueDate ? "Pending" : "Overdue")</strong></div>
                <div>Amount Due: <strong>@String.Format("{0:C}", Model.Total)</strong></div>
                <div>Doctor: @Model.Doctor?.FullName</div>
            </div>
        </div>

        <div class="section">
            <div class="section-title">Invoice Details</div>
            <table>
                <thead>
                    <tr>
                        <th width="5%">#</th>
                        <th width="55%">Item Name</th>
                        <th width="10%">Qty</th>
                        <th width="15%">Unit Price</th>
                        <th width="15%">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        var item = Model.Items[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                            @if (item.ItemType == "Test")
                            {
                                <span>@item.TestName</span>  <!-- Display Test Name -->
                            }
                            else if (item.ItemType == "Inventory")
                            {
                                 <span>
                                    @(item.InventoryItem?.Name       
                                      ?? item.MedicationsName      
                                      ?? "Medication not found")
                                </span>  <!-- Display Inventory Name -->
                            }
                            else if (item.ItemType == "Medication")
                            {
                                <span>
                                    @(item.InventoryItem?.Name       
                                      ?? item.MedicationsName      
                                      ?? "Medication not found")
                                </span>  <!-- Display Medication Name -->
                            }
                            else if (item.ItemType == "Appointment")
                            {
                                <span>
                                    @(item.AppointmentWIth       
                                      ?? item.Appointment.Doctor.FullName    
                                      ?? "Appointment not found")
                                </span>
 <!-- Display Treatment Name -->
                            }
                            else if (item.ItemType == "Combined")
                            {
                                <span>
                                    @(item.Treatment?.Name       
                                      ?? item.TreatmentName      
                                      ?? "Treatment not found")
                                </span>
 <!-- Display Treatment Name -->
                            }else if (item.ItemType == "Treatment")
                            {
                                <span>
                                    @(item.Treatment?.Name       
                                      ?? item.TreatmentName      
                                      ?? "Treatment not found")
                                </span>
 <!-- Display Treatment Name -->
                            }
                            else
                            {
                                <span>@item.Description</span>  <!-- Default to Description if no specific type -->
                            }
                        </td>
                            <td>@item.Quantity</td>
                            <td>@String.Format("{0:C}", item.UnitPrice)</td>
                            <td>@String.Format("{0:C}", item.LineTotal)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="4" class="text-right">Subtotal</td>
                        <td>@String.Format("{0:C}", Model.SubTotal)</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="4" class="text-right">Tax</td>
                        <td>@String.Format("{0:C}", Model.Tax)</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="4" class="text-right">Discount</td>
                        <td>@String.Format("{0:C}", Model.Discount)</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="4" class="text-right">Total Amount</td>
                        <td>@String.Format("{0:C}", Model.Total)</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="payment-info">
            <strong>Payment Instructions:</strong> Please make payment by the due date. Contact our office for payment options.
        </div>

        <div class="footer">
            <p>This invoice is computer generated and valid without signature.</p>
            <p>Thank you for your business!</p>
        </div>
    </div>

    <script>
        // Add print functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-trigger print dialog if URL has ?print parameter
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('print')) {
                window.print();
            }
        });
    </script>
</body>
</html> *@

