@model CMS.ViewModels.LaboratoryOrderViewModel
@using CMS.Models; // For the OrderStatus enum

@{
    ViewData["Title"] = Model.Order.Id == 0 ? "Create Lab Order" : "Edit Lab Order";
}

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
                <a asp-controller="LaboratoryOrder" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i> Back to List
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Upsert" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Order.Id" type="hidden" />
                        <input asp-for="Order.CreatedAt" type="hidden" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.TestName" class="form-label"></label>
                                <input asp-for="Order.TestName" class="form-control" placeholder="e.g., Complete Blood Count" />
                                <span asp-validation-for="Order.TestName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.TestCode" class="form-label"></label>
                                <input asp-for="Order.TestCode" class="form-control" placeholder="e.g., CBC" />
                                <span asp-validation-for="Order.TestCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.PatientId" class="form-label"></label>
                                <select asp-for="Order.PatientId" asp-items="Model.Patients" class="form-select">
                                    <option value="">-- Select Patient --</option>
                                </select>
                                <span asp-validation-for="Order.PatientId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.TestPrice" class="form-label"></label>
                                <input asp-for="Order.TestPrice" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="Order.TestPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.Status" class="form-label"></label>
                                <select asp-for="Order.Status" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-select"></select>
                                <span asp-validation-for="Order.Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.OrderDate" class="form-label"></label>
                                <input asp-for="Order.OrderDate" type="date" class="form-control" />
                                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.CollectionDate" class="form-label"></label>
                                <input asp-for="Order.CollectionDate" type="date" class="form-control" />
                                <span asp-validation-for="Order.CollectionDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.ResultDate" class="form-label"></label>
                                <input asp-for="Order.ResultDate" type="date" class="form-control" />
                                <span asp-validation-for="Order.ResultDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.Result" class="form-label">Result Summary</label>
                            <textarea asp-for="Order.Result" class="form-control" rows="3" placeholder="Enter result summary or key findings..."></textarea>
                            <span asp-validation-for="Order.Result" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.Notes" class="form-label"></label>
                            <textarea asp-for="Order.Notes" class="form-control" rows="3" placeholder="Enter any internal notes..."></textarea>
                            <span asp-validation-for="Order.Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-device-floppy me-1"></i> Save Order
                            </button>
                            <a asp-controller="LaboratoryOrder" asp-action="Index" class="btn btn-secondary">
                                <i class="ti ti-x me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
