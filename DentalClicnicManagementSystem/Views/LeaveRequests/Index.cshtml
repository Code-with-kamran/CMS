@* // File: Views/LeaveRequests/Index.cshtml *@
@{
    ViewData["Title"] = "Leave Requests";
}

<form id="__af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">

            <!-- Header -->
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">Leave Requests</h4>
                </div>
                <div class="text-end">
                    <a href="javascript:void(0);" class="btn btn-primary ms-2 fs-13 btn-md" data-bs-toggle="modal" data-bs-target="#leaveRequestModal" data-url="@Url.Action("Create", "LeaveRequests")">
                        <i class="ti ti-plus me-1"></i>New Request
                    </a>
                </div>
            </div>

            <!-- Card -->
            <div class="card">
                <div class="card-body">

                    <!-- External controls -->
                    <div class="row g-2 mb-3 align-items-center">
                        <!-- page-length -->
                        <div class="col-auto d-none d-sm-flex align-items-center">
                            <label class="me-2 mb-0">Show</label>
                            <select id="pageLength" class="form-select form-select-sm" style="min-width:90px">
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ms-2">entries</span>
                        </div>

                        <!-- search -->
                        <div class="col-12 col-sm ms-sm-auto" style="max-width:260px">
                            <input id="globalSearch" type="search" class="form-control form-control-sm" placeholder="Search" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="leaveRequestList" class="table table-hover align-middle w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Type</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Days</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                    <th>Decision By</th>
                                    <th>Decision At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div class="row align-items-center g-2 mt-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted" id="dt-info"></div>
                        </div>
                        <div class="col-12 col-sm-6 d-flex justify-content-sm-end">
                            <div id="dt-pager"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal for Create/Details -->
<div class="modal fade" id="leaveRequestModal" tabindex="-1" aria-labelledby="leaveRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="leaveRequestModalLabel">Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Partial view content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const table = myCodeDataTable(
                'leaveRequestList',
                '@Url.Action("GetLeaveRequests", "LeaveRequests")',
                [
                    { data: 'employeeCode', orderable: true },
                    { data: 'employeeName', orderable: true },
                    { data: 'type', orderable: true },
                    { data: 'startDate', orderable: true },
                    { data: 'endDate', orderable: true },
                    { data: 'days', orderable: true },
                    { data: 'reason', orderable: false, render: d => `<span class="truncate truncate-220">${esc(d)}</span>` },
                    {
                        data: 'status',
                        orderable: true,
                        render: d => {
                            let badgeClass = '';
                            switch (d) {
                                case 'Pending': badgeClass = 'bg-warning'; break;
                                case 'Approved': badgeClass = 'bg-success'; break;
                                case 'Rejected': badgeClass = 'bg-danger'; break;
                                default: badgeClass = 'bg-secondary'; break;
                            }
                            return `<span class="badge ${badgeClass}">${esc(d)}</span>`;
                        }
                    },
                    { data: 'decisionBy', orderable: true },
                    { data: 'decisionAt', orderable: true },
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            let actions = `
                                <div class="dropdown d-inline-block">
                                    <a href="javascript:void(0);"
                                       class="shadow-sm fs-14 d-inline-flex border rounded-2 p-1"
                                       data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu p-2 dropdown-menu-end">`;

                            if (row.status === 'Pending') {
                                actions += `
                                        <li>
                                            <a href="javascript:void(0);"
                                               class="dropdown-item d-flex align-items-center js-approve-leave"
                                               data-url="/LeaveRequests/Approve/${row.id}"
                                               data-id="${row.id}"
                                               data-name="request for ${esc(row.employeeName)}">
                                                <i class="ti ti-check me-2"></i> Approve
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);"
                                               class="dropdown-item d-flex align-items-center js-reject-leave"
                                               data-url="/LeaveRequests/Reject/${row.id}"
                                               data-id="${row.id}"
                                               data-name="request for ${esc(row.employeeName)}">
                                                <i class="ti ti-times me-2"></i> Reject
                                            </a>
                                        </li>`;
                            }
                            actions += `
                                    </ul>
                                </div>`;
                            return actions;
                        }
                    }
                ],
                [[3, 'desc']] // Default sort by Start Date descending
            );

            // Handle modal loading
            $('#leaveRequestModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget); // Button that triggered the modal
                const url = button.data('url'); // Extract info from data-* attributes
                const modal = $(this);

                modal.find('.modal-body').html('<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');

                $.get(url, function (data) {
                    modal.find('.modal-body').html(data);
                    // Re-apply unobtrusive validation after content is loaded
                    $.validator.unobtrusive.parse(modal.find('form'));
                }).fail(function () {
                    modal.find('.modal-body').html('<div class="alert alert-danger">Error loading content.</div>');
                });
            });

            // Handle form submission within the modal
            $(document).on('submit', '#leaveRequestFormModal', function (e) {
                e.preventDefault();
                const form = $(this);
                if (!form.valid()) { // Check client-side validation
                    return;
                }

                const formData = new FormData(form[0]);
                const token = $('form#__af input[name="__RequestVerificationToken"]').val();
                formData.append('__RequestVerificationToken', token);

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.status) {
                            Swal.fire('Success', response.message, 'success');
                            $('#leaveRequestModal').modal('hide');
                            table.ajax.reload(null, false);
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire('Error', 'An error occurred while saving the record.', 'error');
                        console.error(xhr.responseText);
                    }
                });
            });

            // Handle Approve/Reject actions
            $(document).on('click', '.js-approve-leave, .js-reject-leave', function () {
                const id = $(this).data('id');
                const name = $(this).data('name');
                const actionUrl = $(this).data('url');
                const isApprove = $(this).hasClass('js-approve-leave');
                const actionText = isApprove ? 'Approve' : 'Reject';
                const icon = isApprove ? 'success' : 'warning';
                const confirmButtonColor = isApprove ? '#28a745' : '#dc3545';

                Swal.fire({
                    title: `${actionText} ${name}?`,
                    text: `Are you sure you want to ${actionText.toLowerCase()} this leave request?`,
                    icon: icon,
                    showCancelButton: true,
                    confirmButtonColor: confirmButtonColor,
                    cancelButtonColor: '#aaa',
                    confirmButtonText: `Yes, ${actionText.toLowerCase()} it!`
                }).then(res => {
                    if (res.isConfirmed) {
                        const token = $('form#__af input[name="__RequestVerificationToken"]').val();
                        $.ajax({
                            url: actionUrl,
                            type: 'POST',
                            headers: { 'RequestVerificationToken': token },
                            success: r => {
                                if (r.status) {
                                    Swal.fire(actionText + 'd!', r.message, 'success');
                                    table.ajax.reload(null, false);
                                } else {
                                    Swal.fire('Error', r.message || `${actionText} failed`, 'error');
                                }
                            },
                            error: () => Swal.fire('Error', 'Something went wrong', 'error')
                        });
                    }
                });
            });
        });
    </script>
}

