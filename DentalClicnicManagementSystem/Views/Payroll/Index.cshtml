@* // File: Views/Payroll/Index.cshtml *@
@{
    ViewData["Title"] = "Payroll Runs";
}

<form id="__af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">

            <!-- Header -->
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">Payroll Runs</h4>
                </div>
                <div class="text-end">
                    <a asp-controller="Payroll" asp-action="CreateRun" class="btn btn-primary ms-2 fs-13 btn-md">
                        <i class="ti ti-plus me-1"></i>New Payroll Run
                    </a>
                </div>
            </div>

            <!-- Card -->
            <div class="card">
                <div class="card-body">

                    <!-- External controls -->
                    <div class="row g-2 mb-3 align-items-center">
                        <!-- page-length -->
                        <div class="col-auto d-none d-sm-flex align-items-center">
                            <label class="me-2 mb-0">Show</label>
                            <select id="pageLength" class="form-select form-select-sm" style="min-width:90px">
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ms-2">entries</span>
                        </div>

                        <!-- search -->
                        <div class="col-12 col-sm ms-sm-auto" style="max-width:260px">
                            <input id="globalSearch" type="search" class="form-control form-control-sm" placeholder="Search" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="payrollRunList" class="table table-hover align-middle w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Year</th>
                                    <th>Month</th>
                                    <th>Run At</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div class="row align-items-center g-2 mt-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted" id="dt-info"></div>
                        </div>
                        <div class="col-12 col-sm-6 d-flex justify-content-sm-end">
                            <div id="dt-pager"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const table = myCodeDataTable(
                'payrollRunList',
                '@Url.Action("GetPayrollRuns", "Payroll")',
                [
                    { data: 'year', orderable: true },
                    { data: 'month', orderable: true },
                    { data: 'runAt', orderable: true },
                    { data: 'notes', orderable: false, render: d => `<span class="truncate truncate-220">${esc(d)}</span>` },
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            return `
                                <div class="dropdown d-inline-block">
                                    <a href="javascript:void(0);"
                                       class="shadow-sm fs-14 d-inline-flex border rounded-2 p-1"
                                       data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu p-2 dropdown-menu-end">
                                        <li>
                                            <a href="/Payroll/RunDetails/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-list me-2"></i> View Details
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Payroll/ExportPayrollItemsCsv/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-download me-2"></i> Export CSV
                                            </a>
                                        </li>
                                    </ul>
                                </div>`;
                        }
                    }
                ],
                [[2, 'desc']] // Default sort by Run At descending
            );

            // Display TempData messages
            const successMessage = '@TempData["success"]';
            const errorMessage = '@TempData["error"]';

            if (successMessage) {
                Swal.fire('Success', successMessage, 'success');
            }
            if (errorMessage) {
                Swal.fire('Error', errorMessage, 'error');
            }
        });
    </script>
}

