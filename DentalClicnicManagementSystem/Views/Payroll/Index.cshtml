                            <div id="dt-pager"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const token = $('#__af input[name="__RequestVerificationToken"]').val();

            // Destroy existing DataTable if any
            if ($.fn.DataTable.isDataTable('#payrollRunList')) {
                $('#payrollRunList').DataTable().destroy();
            }

            const esc = s => s == null ? '' : String(s);

            // Initialize DataTable
            const table = $('#payrollRunList').DataTable({
                processing: false,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetPayrollRuns", "Payroll")',
                    type: 'GET',
                    data: function (d) {
                        // Map DataTables parameters to your server-side format
                        d.draw = d.draw;
                        d.start = d.start;
                        d.length = d.length;
                        d.searchValue = d.search.value;
                        d.sortColumnIndex = d.order[0]?.column;
                        d.sortColumnDirection = d.order[0]?.dir;
                    },
                    dataSrc: function (json) {
                        // Update summary cards with data from server
                        updateSummaryCards(json.summary);
                        return json.data;
                    }
                },
                dom: 'rtip',
                paging: true,
                pagingType: 'simple_numbers',
                info: true,
                order: [[2, 'desc']], // Default sort by Run At descending
                autoWidth: false,
                responsive: true,
                columns: [
                    {
                        data: 'year',
                        orderable: true,
                        render: d => `<span class="fw-semibold">${esc(d)}</span>`
                    },
                    {
                        data: 'month',
                        orderable: true,
                        render: d => {
                            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                                'July', 'August', 'September', 'October', 'November', 'December'];
                            return `<span class="text-primary">${monthNames[d-1]}</span>`;
                        }
                    },
                    {
                        data: 'runAt',
                        orderable: true,
                        render: d => {
                            if (!d) return '-';
                            const date = new Date(d);
                            return `
                                <div>
                                    <div class="fw-semibold">${date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })}</div>
                                    <small class="text-muted">${date.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' })}</small>
                                </div>`;
                        }
                    },
                    {
                        data: 'notes',
                        orderable: false,
                        render: d => d ? `<span class="truncate truncate-220" title="${esc(d)}">${esc(d)}</span>` : '<span class="text-muted">-</span>'
                    },
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            const currentDate = new Date();
                            const runDate = new Date(row.runAt);
                            const isRecent = (currentDate - runDate) < (24 * 60 * 60 * 1000);

                            return isRecent
                                ? '<span class="badge bg-success">Completed</span>'
                                : '<span class="badge bg-secondary">Processed</span>';
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            return `
                                <div class="dropdown d-inline-block">
                                    <a href="javascript:void(0);"
                                       class="btn btn-sm btn-outline-secondary border-0"
                                       data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu p-2 dropdown-menu-end">
                                        <li>
                                            <a href="/Payroll/RunDetails/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-list me-2"></i> View Details
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Payroll/SummaryReport/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-chart-bar me-2"></i> Summary Report
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Payroll/ExportPayrollItemsCsv/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-download me-2"></i> Export CSV
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="javascript:void(0);"
                                               class="dropdown-item d-flex align-items-center text-danger js-delete-payroll-run"
                                               data-id="${row.id}"
                                               data-period="${row.year}-${String(row.month).padStart(2, '0')}">
                                                <i class="ti ti-trash me-2"></i> Delete Run
                                            </a>
                                        </li>
                                    </ul>
                                </div>`;
                        }
                    }
                ],
                drawCallback: function () {
                    $('#payrollRunList tbody tr.pre-load').remove();
                    const api = this.api();
                    const pagerEl = $(api.table().container()).find('.dataTables_paginate');
                    if (pagerEl.length) $('#dt-pager').empty().append(pagerEl);
                    $('#dt-pager .paginate_button.previous .page-link').html('&lsaquo;');
                    $('#dt-pager .paginate_button.next .page-link').html('&rsaquo;');

                    const info = api.page.info();
                    const msg = info.recordsDisplay
                        ? `Showing ${info.start+1} to ${info.end} of ${info.recordsDisplay.toLocaleString()} entries`
                        : (info.recordsTotal
                            ? `Showing 0 to 0 of ${info.recordsTotal.toLocaleString()} entries`
                            : 'No entries to show');
                    $('#dt-info').text(msg);
                },
                language: {
                    emptyTable: "No payroll runs found",
                    
                    infoEmpty: "No entries to show"
                }
            });


                    $('#payrollRunList tbody').html(
          `<tr class="pre-load"><td colspan="9" class="text-center py-5">
             <div class="spinner-border avatar-lg text-primary m-2" role="status"></div>
           </td></tr>`
        );
            // Function to update summary cards
            function updateSummaryCards(summary) {
                if (summary) {
                    $('#totalRuns').text(summary.totalRuns || '0');
                    $('#pendingActions').text(summary.pendingActions || '0');

                    // Update change percentages if available
                    if (summary.totalRunsChange) {
                        $('#totalRunsChangeTop').text(summary.totalRunsChange);
                        $('#totalRunsChangeBottom').text(summary.totalRunsChange);
                    }

                    if (summary.pendingActionsChange) {
                        $('#pendingActionsChangeTop').text(summary.pendingActionsChange);
                        $('#pendingActionsChangeBottom').text(summary.pendingActionsChange);
                    }
                }
            }

            // Search functionality
            $('#globalSearch').on('input', function () {
                table.search($(this).val()).draw();
            });

            // Page length change
            $('#pageLength').on('change', function () {
                table.page.len(parseInt(this.value, 10)).draw();
            });

            // Delete payroll run handler
            $(document).on('click', '.js-delete-payroll-run', function () {
                const id = $(this).data('id');
                const period = $(this).data('period');

                Swal.fire({
                    title: `Delete Payroll Run?`,
                    text: `Are you sure you want to delete payroll run for ${period}? This action cannot be undone.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: `/Payroll/DeleteRun/${id}`,
                            type: 'POST',
                            headers: { 'RequestVerificationToken': token },
                            success: function (response) {
                                if (response.status) {
                                    Swal.fire('Deleted!', response.message, 'success');
                                    table.ajax.reload(null, false);
                                } else {
                                    Swal.fire('Error!', response.message || 'Delete failed', 'error');
                                }
                            },
                            error: function () {
                                Swal.fire('Error!', 'Something went wrong while deleting the payroll run.', 'error');
                            }
                        });
                    }
                });
            });

            // Display TempData messages
            const successMessage = '@TempData["success"]';
            const errorMessage = '@TempData["error"]';

            if (successMessage) {
                Swal.fire('Success', successMessage, 'success');
            }
            if (errorMessage) {
                Swal.fire('Error', errorMessage, 'error');
            }
        });
    </script>
} *@

