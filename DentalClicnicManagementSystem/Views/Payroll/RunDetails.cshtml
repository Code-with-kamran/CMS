@section Scripts {
    <script>
        $(function () {
            const token = $('#__af input[name="__RequestVerificationToken"]').val();
            const esc = s => s == null ? '' : String(s);

            function safe(num, digits) {
                if (num === null || num === undefined || isNaN(num)) return Number(0).toFixed(digits);
                return Number(num).toFixed(digits);
            }

            function safePercent(val) {
                if (val === null || val === undefined || isNaN(val)) return '0';
                return parseFloat(val).toFixed(2);
            }

            function arrow(percent) { return percent >= 0 ? 'ti-arrow-up' : 'ti-arrow-down'; }
            function sign(percent) { return percent >= 0 ? '+' : ''; }

            function loadPayrollCardSummary(data) {
                if (!data) return;

                // Total Employees
                $("#totalEmployees").text(safe(data.totalEmployees, 0));
                $("#employeesChangeTop").text(sign(data.totalEmployeesChangePercent) + safePercent(data.totalEmployeesChangePercent) + '%');
                $("#employeesChangeBottom").html(
                    sign(data.totalEmployeesChangePercent) + safePercent(data.totalEmployeesChangePercent) + '% ' +
                    '<i class="ti ' + arrow(data.totalEmployeesChangePercent) + '"></i>'
                );

                // Net Pay
                $("#totalNetPay").text('£' + safe(data.totalNetPay, 2));
                $("#netPayChangeTop").text(sign(data.totalNetPayChangePercent) + safePercent(data.totalNetPayChangePercent) + '%');
                $("#netPayChangeBottom").html(
                    sign(data.totalNetPayChangePercent) + safePercent(data.totalNetPayChangePercent) + '% ' +
                    '<i class="ti ' + arrow(data.totalNetPayChangePercent) + ' ms-1"></i>'
                );

                // Allowances
                $("#totalAllowances").text('£' + safe(data.totalAllowances, 2));
                $("#allowancesChangeTop").text(sign(data.totalAllowancesChangePercent) + safePercent(data.totalAllowancesChangePercent) + '%');
                $("#allowancesChangeBottom").html(
                    sign(data.totalAllowancesChangePercent) + safePercent(data.totalAllowancesChangePercent) + '% ' +
                    '<i class="ti ' + arrow(data.totalAllowancesChangePercent) + ' ms-1"></i>'
                );

                // Deductions
                $("#totalDeductions").text('£' + safe(data.totalDeductions, 2));
                $("#deductionsChangeTop").text(sign(data.totalDeductionsChangePercent) + safePercent(data.totalDeductionsChangePercent) + '%');
                $("#deductionsChangeBottom").html(
                    sign(data.totalDeductionsChangePercent) + safePercent(data.totalDeductionsChangePercent) + '% ' +
                    '<i class="ti ' + arrow(data.totalDeductionsChangePercent) + ' ms-1"></i>'
                );
            }

            // Load initial data
            $.get('@Url.Action("GetPayrollCardSummary", "Payroll")', { runId: @Model.PayrollRun.Id }, function(response) {
                if (response.success && response.data) {
                    loadPayrollCardSummary(response.data);
                }
            });

            // Initialize DataTable for payroll items
            const table = $('#payrollItemList').DataTable({
                processing: false,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetPayrollItems", "Payroll", new { runId = Model.PayrollRun.Id })',
                    type: 'GET',
                    data: function (d) {
                        d.draw = d.draw;
                        d.start = d.start;
                        d.length = d.length;
                        d.searchValue = d.search.value;
                        d.sortColumnIndex = d.order[0]?.column;
                        d.sortColumnDirection = d.order[0]?.dir;
                        d.runId = @Model.PayrollRun.Id;
                    }
                },
                dom: 'rtip',
                paging: true,
                pagingType: 'simple_numbers',
                info: true,
                order: [[1, 'asc']],
                autoWidth: false,
                responsive: true,
                columns: [
                            {
                                data: 'employeeCode',
                                orderable: true,
                                render: d => `<span class="fw-semibold">${esc(d)}</span>`
                            },
                            {
                                data: 'employeeName',
                                orderable: true,
                                render: d => `<span class="text-primary">${esc(d)}</span>`
                            },
                            {
                                data: 'designation',
                                orderable: true,
                                render: d => `<span class="text-muted">${esc(d)}</span>`
                            },
                            {
                                data: 'baseSalary',
                                orderable: true,
                                className: 'text-end',
                                render: d => `<span class="fw-semibold">£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</span>`
                            },
                            {
                                data: 'allowances',
                                orderable: true,
                                className: 'text-end',
                                render: d => `<span class="text-warning">£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</span>`
                            },
                            {
                                data: 'deductions',
                                orderable: true,
                                className: 'text-end',
                                render: d => `<span class="text-danger">£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</span>`
                            },
                            {
                                data: 'netPay',
                                orderable: true,
                                className: 'text-end',
                                render: d => `<span class="text-success fw-bold">£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</span>`
                            },
                            {
                                data: 'attendanceSummary',
                                orderable: false,
                                render: d => `<span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">${esc(d || 'N/A')}</span>`
                            },
                            {
                                data: null,
                                orderable: false,
                                className: 'text-center',
                                render: function (_data, _type, row) {
                                    return `
                                        <div class="dropdown d-inline-block">
                                            <a href="javascript:void(0);"
                                               class="btn btn-sm btn-outline-secondary border-0"
                                               data-bs-toggle="dropdown">
                                                <i class="ti ti-dots-vertical"></i>
                                            </a>
                                            <ul class="dropdown-menu p-2 dropdown-menu-end">
                                                <li>
                                                    <a href="/Payroll/Payslip/${row.id}" class="dropdown-item d-flex align-items-center">
                                                        <i class="ti ti-file-text me-2"></i> View Payslip
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0);"
                                                       class="dropdown-item d-flex align-items-center js-recalculate-item"
                                                       data-bs-toggle="modal" data-bs-target="#recalculateModal"
                                                       data-id="${row.id}"
                                                       data-allowances="${row.allowances}"
                                                       data-deductions="${row.deductions}">
                                                        <i class="ti ti-calculator me-2"></i> Recalculate
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>`;
                                }
                            }
                        ],
                drawCallback: function () {
                    $('#payrollItemList tbody tr.pre-load').remove();
                            const api = this.api();
                            const pagerEl = $(api.table().container()).find('.dataTables_paginate');
                            if (pagerEl.length) $('#dt-pager').empty().append(pagerEl);
                            $('#dt-pager .paginate_button.previous .page-link').html('&lsaquo;');
                            $('#dt-pager .paginate_button.next .page-link').html('&rsaquo;');

                            const info = api.page.info();
                            const msg = info.recordsDisplay
                                ? `Showing ${info.start+1} to ${info.end} of ${info.recordsDisplay.toLocaleString()} entries`
                                : (info.recordsTotal
                                    ? `Showing 0 to 0 of ${info.recordsTotal.toLocaleString()} entries`
                                    : 'No entries to show');
                            $('#dt-info').text(msg);
                        },
                language: {
                    emptyTable: "No payroll items found",
                    infoEmpty: "No entries to show"
                }
            });


          $('#payrollItemList tbody').html(
          `<tr class="pre-load"><td colspan="9" class="text-center py-5">
             <div class="spinner-border avatar-lg text-primary m-2" role="status"></div>
           </td></tr>`
        );
            // Search functionality
            $('#globalSearch').on('input', function () {
                table.search($(this).val()).draw();
            });

            // Page length change
            $('#pageLength').on('change', function () {
                table.page.len(parseInt(this.value, 10)).draw();
            });

            // Handle recalculate modal population
            $('#recalculateModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const itemId = button.data('id');
                const allowances = button.data('allowances');
                const deductions = button.data('deductions');

                const modal = $(this);
                modal.find('#recalcItemId').val(itemId);
                modal.find('#recalcAllowances').val(allowances);
                modal.find('#recalcDeductions').val(deductions);
            });

            // Handle recalculate form submission
            $('#recalculateForm').on('submit', function (e) {
                e.preventDefault();
                const form = $(this);
                const itemId = form.find('#recalcItemId').val();
                const allowances = form.find('#recalcAllowances').val();
                const deductions = form.find('#recalcDeductions').val();
                const token = $('form#__af input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("RecalculateItem", "Payroll")',
                    type: 'POST',
                    data: {
                        id: itemId,
                        allowances: allowances,
                        deductions: deductions,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        if (response.status) {
                            Swal.fire('Success', response.message, 'success');
                            $('#recalculateModal').modal('hide');
                            table.ajax.reload(null, false);

                            // Reload summary cards after recalculation
                            $.get('@Url.Action("GetPayrollCardSummary", "Payroll")', { runId: @Model.PayrollRun.Id }, function(response) {
                                if (response.success && response.data) {
                                    loadPayrollCardSummary(response.data);
                                }
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'An error occurred during recalculation.', 'error');
                    }
                });
            });
        });
    </script>
}


