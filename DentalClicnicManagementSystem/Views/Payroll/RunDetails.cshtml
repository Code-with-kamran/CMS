@* // File: Views/Payroll/RunDetails.cshtml *@
@model CMS.Models.PayrollRun

@{
    ViewData["Title"] = $"Payroll Details for {new DateTime(Model.Year, Model.Month, 1).ToString("MMMM yyyy")}";
}

<form id="__af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">

            <!-- Header -->
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
                    <p class="text-muted mb-0">Run on: @Model.RunAt.ToString("dd MMM yyyy HH:mm")</p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p class="text-muted mb-0">Notes: @Model.Notes</p>
                    }
                </div>
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 fs-13 btn-md">
                        Back to Payroll Runs
                    </a>
                    <a href="@Url.Action("ExportPayrollItemsCsv", "Payroll", new { runId = Model.Id })" class="btn btn-info ms-2 fs-13 btn-md">
                        <i class="ti ti-download me-1"></i>Export CSV
                    </a>
                </div>
            </div>

            <!-- Card -->
            <div class="card">
                <div class="card-body">

                    <!-- External controls -->
                    <div class="row g-2 mb-3 align-items-center">
                        <!-- page-length -->
                        <div class="col-auto d-none d-sm-flex align-items-center">
                            <label class="me-2 mb-0">Show</label>
                            <select id="pageLength" class="form-select form-select-sm" style="min-width:90px">
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ms-2">entries</span>
                        </div>

                        <!-- search -->
                        <div class="col-12 col-sm ms-sm-auto" style="max-width:260px">
                            <input id="globalSearch" type="search" class="form-control form-control-sm" placeholder="Search" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="payrollItemList" class="table table-hover align-middle w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Base Salary</th>
                                    <th>Allowances</th>
                                    <th>Deductions</th>
                                    <th>Net Pay</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div class="row align-items-center g-2 mt-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted" id="dt-info"></div>
                        </div>
                        <div class="col-12 col-sm-6 d-flex justify-content-sm-end">
                            <div id="dt-pager"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal for Recalculate -->
<div class="modal fade" id="recalculateModal" tabindex="-1" aria-labelledby="recalculateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="recalculateModalLabel">Recalculate Payroll Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="recalculateForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="recalcItemId" name="id" />
                    <div class="mb-3">
                        <label for="recalcAllowances" class="form-label">Allowances</label>
                        <input type="number" step="0.01" class="form-control" id="recalcAllowances" name="allowances" required />
                    </div>
                    <div class="mb-3">
                        <label for="recalcDeductions" class="form-label">Deductions</label>
                        <input type="number" step="0.01" class="form-control" id="recalcDeductions" name="deductions" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Recalculate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const table = myCodeDataTable(
                'payrollItemList',
                '@Url.Action("GetPayrollItems", "Payroll", new { runId = Model.Id })',
                [
                    { data: 'employeeCode', orderable: true },
                    { data: 'employeeName', orderable: true },
                    { data: 'baseSalary', orderable: true, render: d => `£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}` },
                    { data: 'allowances', orderable: true, render: d => `£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}` },
                    { data: 'deductions', orderable: true, render: d => `£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}` },
                    { data: 'netPay', orderable: true, render: d => `£${parseFloat(d).toLocaleString('en-GB', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}` },
                    {
                        data: null,
                        orderable: false,
                        className: 'text-center',
                        render: function (_data, _type, row) {
                            return `
                                <div class="dropdown d-inline-block">
                                    <a href="javascript:void(0);"
                                       class="shadow-sm fs-14 d-inline-flex border rounded-2 p-1"
                                       data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu p-2 dropdown-menu-end">
                                        <li>
                                            <a href="/Payroll/Payslip/${row.id}" class="dropdown-item d-flex align-items-center">
                                                <i class="ti ti-file-text me-2"></i> View Payslip
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);"
                                               class="dropdown-item d-flex align-items-center js-recalculate-item"
                                               data-bs-toggle="modal" data-bs-target="#recalculateModal"
                                               data-id="${row.id}"
                                               data-allowances="${row.allowances}"
                                               data-deductions="${row.deductions}">
                                                <i class="ti ti-calculator me-2"></i> Recalculate
                                            </a>
                                        </li>
                                    </ul>
                                </div>`;
                        }
                    }
                ],
                [[1, 'asc']] // Default sort by Employee Name
            );

            // Handle recalculate modal population
            $('#recalculateModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const itemId = button.data('id');
                const allowances = button.data('allowances');
                const deductions = button.data('deductions');

                const modal = $(this);
                modal.find('#recalcItemId').val(itemId);
                modal.find('#recalcAllowances').val(allowances);
                modal.find('#recalcDeductions').val(deductions);
            });

            // Handle recalculate form submission
            $('#recalculateForm').on('submit', function (e) {
                e.preventDefault();
                const form = $(this);
                const itemId = form.find('#recalcItemId').val();
                const allowances = form.find('#recalcAllowances').val();
                const deductions = form.find('#recalcDeductions').val();
                const token = $('form#__af input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("RecalculateItem", "Payroll")',
                    type: 'POST',
                    data: {
                        id: itemId,
                        allowances: allowances,
                        deductions: deductions,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        if (response.status) {
                            Swal.fire('Success', response.message, 'success');
                            $('#recalculateModal').modal('hide');
                            table.ajax.reload(null, false);
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'An error occurred during recalculation.', 'error');
                    }
                });
            });
        });
    </script>
}

