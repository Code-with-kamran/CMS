                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Déductions totales :</strong></td>
                                    <td>@currencySymbol@Model.TotalDeductions.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td><strong>Net à payer total :</strong></td>
                                    <td class="text-success fw-bold">@currencySymbol@Model.TotalNetPay.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td><strong>Net à payer moyen :</strong></td>
                                    <td>@currencySymbol@Model.AverageNetPay.ToString("N2")</td>
                                </tr>
