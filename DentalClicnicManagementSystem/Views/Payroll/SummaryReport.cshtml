                                    <td><strong>Salaires de base totaux :</strong></td>
                                    <td>@currencySymbol@Model.TotalBaseSalary.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td><strong>Allocations totales :</strong></td>
                                    <td>@currencySymbol@Model.TotalAllowances.ToString("N2")</td>
                                </tr>
