@*  File: Views/PerformanceReviews/_UpsertPartial.cshtml *@
@model CMS.Models.PerformanceReview
@using Microsoft.AspNetCore.Mvc.Rendering // Required for SelectList

<form id="performanceReviewFormModal" asp-action="Upsert" asp-controller="PerformanceReviews" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

    <div class="row g-3">
        <div class="col-md-12">
            <label asp-for="EmployeeId" class="form-label"></label>
            <select asp-for="EmployeeId" class="form-select" asp-items="@(ViewData["EmployeeList"] as SelectList)" required>
                <option value="">-- Select Employee --</option>
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ReviewDate" class="form-label"></label>
            <input asp-for="ReviewDate" type="date" class="form-control" required />
            <span asp-validation-for="ReviewDate" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Reviewer" class="form-label"></label>
            <input asp-for="Reviewer" class="form-control" required />
            <span asp-validation-for="Reviewer" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Rating" class="form-label"></label>
            <select asp-for="Rating" class="form-select" required>
                <option value="">-- Select Rating --</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer mt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>

<script>
    // Re-initialize client-side validation for the modal form
    (() => {
        'use strict';
        const form = document.getElementById('performanceReviewFormModal');
        if (form) {
            form.addEventListener('submit', e => {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }
    })();
</script>

