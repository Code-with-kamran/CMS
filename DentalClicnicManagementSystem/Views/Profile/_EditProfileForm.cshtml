@model CMS.ViewModels.ProfileViewModel

@{
    var currentImage = string.IsNullOrEmpty(Model?.ProfileImageUrl) ? "/uploads/doctors/patient_default.jpg" : Model.ProfileImageUrl;
    var currentFileName = string.IsNullOrEmpty(Model?.ProfileImageUrl) ? "No file chosen" : System.IO.Path.GetFileName(Model.ProfileImageUrl);
}

<form id="editProfileForm" asp-action="Edit" asp-controller="Profile" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Profile Picture</label>

            <!-- File Input -->
            @* <input type="file" name="ProfileImage" class="form-control" accept="image/*" id="profileImageInput" onchange="updateFileNameAndPreview()" /> *@
            <input type="file" name="ProfileImage" class="form-control" accept="image/*" id="profileImageInput" />

            <!-- File name display -->
            <div class="form-text">
                <span id="fileNameDisplay">@currentFileName</span>
                <span class="ms-1">• Max file size: 1MB</span>
            </div>

            <!-- Image Preview -->
            <div class="mt-3">
                <img id="imagePreview"
                     src="@currentImage"
                     alt="Image preview"
                     class="img-thumbnail"
                     style="max-height: 200px;" />
            </div>
        </div>

        <!-- OPTIONAL password change -->
        <div class="col-12">
            <div class="alert alert-light border">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">New Password (optional)</label>
                        <input type="password" name="NewPassword" class="form-control" autocomplete="new-password" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    </div>
                </div>
                <div class="form-text mt-2">
                    Leave both fields empty to keep your current password.
                </div>
            </div>
        </div>

        <div class="col-12">
            <label asp-for="Address" class="form-label">Your Location</label>
            <input asp-for="Address" type="text" class="form-control" value="@Model?.Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

<script>
    (function () {
        function updateFileNameAndPreview() {
            const fileInput = document.getElementById('profileImageInput');
            const fileNameDisplay = document.getElementById('fileNameDisplay');
            const imagePreview = document.getElementById('imagePreview');

            if (fileInput && fileInput.files.length > 0) {
                const fileName = fileInput.files[0].name;
                fileNameDisplay.textContent = fileName;

                const reader = new FileReader();
                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                };
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                fileNameDisplay.textContent = "@currentFileName";
            }
        }

        // If this partial is inserted dynamically, call this attach code after insertion.
        const el = document.getElementById('profileImageInput');
        if (el) el.addEventListener('change', updateFileNameAndPreview);
    })();
</script>

