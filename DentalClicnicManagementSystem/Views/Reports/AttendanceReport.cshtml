@* // File: Views/Reports/AttendanceReport.cshtml *@
@{
    ViewData["Title"] = "Attendance Report";
}

<form id="__af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">

            <!-- Header -->
            <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 mb-3">
                <div class="flex-grow-1">
                    <h4 class="fw-bold mb-0">Attendance Report</h4>
                </div>
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 fs-13 btn-md">
                        Back to Reports
                    </a>
                    <button id="exportCsvBtn" class="btn btn-info ms-2 fs-13 btn-md">
                        <i class="ti ti-download me-1"></i>Export CSV
                    </button>
                </div>
            </div>

            <!-- Card -->
            <div class="card">
                <div class="card-body">

                    <!-- Filters -->
                    <div class="row g-2 mb-3 align-items-center">
                        <div class="col-md-3">
                            <label for="startDateFilter" class="form-label">Start Date</label>
                            <input type="date" id="startDateFilter" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-3">
                            <label for="endDateFilter" class="form-label">End Date</label>
                            <input type="date" id="endDateFilter" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-3">
                            <label for="statusFilter" class="form-label">Status</label>
                            <select id="statusFilter" class="form-select form-select-sm">
                                <option value="">All</option>
                                @foreach (var status in Enum.GetValues(typeof(CMS.Models.AttendanceStatus)))
                                {
                                    <option value="@status">@status.ToString()</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button id="applyFiltersBtn" class="btn btn-primary btn-sm me-2">Apply Filters</button>
                            <button id="clearFiltersBtn" class="btn btn-secondary btn-sm">Clear Filters</button>
                        </div>
                    </div>

                    <!-- External controls -->
                    <div class="row g-2 mb-3 align-items-center">
                        <!-- page-length -->
                        <div class="col-auto d-none d-sm-flex align-items-center">
                            <label class="me-2 mb-0">Show</label>
                            <select id="pageLength" class="form-select form-select-sm" style="min-width:90px">
                                <option value="10" selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ms-2">entries</span>
                        </div>

                        <!-- search -->
                        <div class="col-12 col-sm ms-sm-auto" style="max-width:260px">
                            <input id="globalSearch" type="search" class="form-control form-control-sm" placeholder="Search" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="attendanceReportList" class="table table-hover align-middle w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Date</th>
                                    <th>Check-in</th>
                                    <th>Check-out</th>
                                    <th>Status</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div class="row align-items-center g-2 mt-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted" id="dt-info"></div>
                        </div>
                        <div class="col-12 col-sm-6 d-flex justify-content-sm-end">
                            <div id="dt-pager"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
                // Add this to your existing JavaScript in each report view
        $(function () {
            let isExporting = false;

            // Enhanced export function with loading state
            $('#exportCsvBtn').on('click', function () {
                if (isExporting) return;

                const $btn = $(this);
                const originalText = $btn.html();

                $btn.prop('disabled', true);
                $btn.html('<i class="ti ti-loader me-1"></i>Exporting...');
                isExporting = true;

                try {
                    const params = getFilterParams();
                    const url = '@Url.Action("ExportAttendanceCsv", "Reports")?' + $.param(params);
                    window.location.href = url;

                    // Re-enable button after a delay
                    setTimeout(() => {
                        $btn.prop('disabled', false);
                        $btn.html(originalText);
                        isExporting = false;
                    }, 2000);
                } catch (error) {
                    console.error('Export failed:', error);
                    $btn.prop('disabled', false);
                    $btn.html(originalText);
                    isExporting = false;
                    alert('Export failed. Please try again.');
                }
            });

            // Enhanced filter application with loading indicator
            $('#applyFiltersBtn').on('click', function () {
                const $btn = $(this);
                const originalText = $btn.html();

                $btn.prop('disabled', true);
                $btn.html('<i class="ti ti-loader me-1"></i>Applying...');

                table.ajax.url(
                    '@Url.Action("GetAttendanceReportData", "Reports")?' + $.param(getFilterParams())
                ).load(() => {
                    $btn.prop('disabled', false);
                    $btn.html(originalText);
                });
            });

            // Set default dates for better UX
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);

            $('#startDateFilter').val(firstDay.toISOString().split('T')[0]);
            $('#endDateFilter').val(today.toISOString().split('T')[0]);
        });
        $(function () {
            function getFilterParams() {
                return {
                    startDate: $('#startDateFilter').val(),
                    endDate: $('#endDateFilter').val(),
                    statusFilter: $('#statusFilter').val()
                };
            }

            const table = myCodeDataTable(
                'attendanceReportList',
                '@Url.Action("GetAttendanceReportData", "Reports")',
                [
                    { data: 'employeeCode', orderable: true },
                    { data: 'employeeName', orderable: true },
                    { data: 'date', orderable: true },
                    { data: 'checkIn', orderable: false },
                    { data: 'checkOut', orderable: false },
                    {
                        data: 'status',
                        orderable: true,
                        render: d => {
                            let badgeClass = '';
                            switch (d) {
                                case 'Present': badgeClass = 'bg-success'; break;
                                case 'Late': badgeClass = 'bg-warning'; break;
                                case 'Absent': badgeClass = 'bg-danger'; break;
                                default: badgeClass = 'bg-secondary'; break;
                            }
                            return `<span class="badge ${badgeClass}">${esc(d)}</span>`;
                        }
                    },
                    { data: 'note', orderable: false, render: d => `<span class="truncate truncate-220">${esc(d)}</span>` }
                ],
                [[2, 'desc']], // Default sort by Date descending
                [], // No specific columnDefs for this report
                'rtip' // Use custom controls
            );

            // Override DataTables AJAX data function to include filters
            table.ajax.url(
                '@Url.Action("GetAttendanceReportData", "Reports")?' + $.param(getFilterParams())
            ).load();

            $('#applyFiltersBtn').on('click', function () {
                table.ajax.url(
                    '@Url.Action("GetAttendanceReportData", "Reports")?' + $.param(getFilterParams())
                ).load();
            });

            $('#clearFiltersBtn').on('click', function () {
                $('#startDateFilter').val('');
                $('#endDateFilter').val('');
                $('#statusFilter').val('');
                table.ajax.url(
                    '@Url.Action("GetAttendanceReportData", "Reports")?' + $.param(getFilterParams())
                ).load();
            });

            $('#exportCsvBtn').on('click', function () {
                const params = getFilterParams();
                const url = '@Url.Action("ExportAttendanceCsv", "Reports")?' + $.param(params);
                window.location.href = url;
            });
        });
    </script>
}
