@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-sm-row align-items-sm-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-1">Reports Dashboard</h2>
            <span class="text-secondary">Access all your clinic reports and analytics</span>
