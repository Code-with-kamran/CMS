                    <i class="ti ti-chart-pie fs-3 me-2"></i>
                    <h5 class="card-title mb-0 ms-1">Financial Reports</h5>
                </div>
                <ul class="list-group list-group-flush bg-light">
                    <a href="@Url.Action("DailyCollection")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-cash text-success fs-5 me-3"></i>
                        <div class="flex-fill">Daily Collection Report</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                    @* <a href="@Url.Action("OutstandingInvoices")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-receipt text-warning fs-5 me-3"></i>
                        <div class="flex-fill">Outstanding Invoices</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                    <a href="@Url.Action("DoctorRevenueShare")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-chart-bar text-info fs-5 me-3"></i>
                        <div class="flex-fill">Doctor Revenue Share</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                    <a href="@Url.Action("TaxSummary")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-report-money text-danger fs-5 me-3"></i>
                        <div class="flex-fill">Tax Summary</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a> *@
                </ul>
            </div>
        </div>

        <!-- Appointment Reports -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient bg-success text-white border-0 d-flex align-items-center">
                    <i class="ti ti-calendar fs-3 me-2"></i>
                    <h5 class="card-title mb-0 ms-1">Appointment Reports</h5>
                </div>
                <ul class="list-group list-group-flush bg-light">
                    <a href="@Url.Action("DoctorAppointmentList")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-list text-primary fs-5 me-3"></i>
                        <div class="flex-fill">Doctor Appointment List</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                   
                    @* <a href="@Url.Action("TreatmentStatistics")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-stethoscope text-warning fs-5 me-3"></i>
