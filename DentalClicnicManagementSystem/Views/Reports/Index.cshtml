                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                </ul>
            </div>
        </div>

        <!-- HR Reports -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient bg-info text-white border-0 d-flex align-items-center">
                    <i class="ti ti-users fs-3 me-2"></i>
                    <h5 class="card-title mb-0 ms-1">HR Reports</h5>
                </div>
                <ul class="list-group list-group-flush bg-light">
                    <a href="@Url.Action("Payslip")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-file-invoice text-primary fs-5 me-3"></i>
                        <div class="flex-fill">Payslip</div>
                        <i class="ti ti-chevron-right text-muted fs-6"></i>
                    </a>
                    <a href="@Url.Action("MonthlyAttendanceSheet")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
