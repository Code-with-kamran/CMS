        <!-- Inventory Reports -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient bg-warning border-0 d-flex align-items-center">
                    <i class="ti ti-package fs-3 me-2"></i>
                    <h5 class="card-title mb-0 ms-1 text-dark">Inventory Reports</h5>
                </div>
                <ul class="list-group list-group-flush bg-light">
                    <a href="@Url.Action("LowStock")" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                        <i class="ti ti-alert-triangle text-danger fs-5 me-3"></i>
