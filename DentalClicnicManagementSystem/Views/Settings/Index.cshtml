@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script>
        $(function () {
            const token = $('#__af input[name="__RequestVerificationToken"]').val();

            // SignalR connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/settingsHub")
                .build();

            connection.start().then(() => {
                connection.invoke("JoinSettingsGroup");
            });

            // Listen for settings updates
            connection.on("SettingsUpdated", function (settings) {
                // Update all currency/payment displays across the page
                $('.current-currency').text(settings.defaultCurrency);
                $('.current-payment').text(settings.defaultPaymentMethod);
                $('.current-hours').text(settings.workingHours);

                // Refresh DataTables if they exist
                if ($.fn.DataTable.isDataTable('#currencyList')) {
                    $('#currencyList').DataTable().ajax.reload();
                }
                if ($.fn.DataTable.isDataTable('#paymentMethodList')) {
                    $('#paymentMethodList').DataTable().ajax.reload();
                }

                // Show success notification
                Swal.fire({
                    title: 'Settings Updated!',
                    text: 'Default settings have been updated system-wide.',
                    icon: 'success',
                    timer: 3000,
                    showConfirmButton: false
                });
            });

            // Save settings
            $('#saveSettingsBtn').on('click', function() {
                const submitBtn = $(this);
                const spinner = submitBtn.find('.spinner-border');

                spinner.show();
                submitBtn.prop('disabled', true);

                const formData = {
                    DefaultCurrency: $('#DefaultCurrency').val(),
                    DefaultPaymentMethod: $('#DefaultPaymentMethod').val(),
                    WorkingHours: $('#WorkingHours').val().trim()
                };

                $.ajax({
                    url: '@Url.Action("Index")',
                    type: 'POST',
                    contentType: 'application/json',
                    headers: { 'RequestVerificationToken': token },
                    data: JSON.stringify(formData),
                    success: function(response) {
                        if (response.status) {
                            Swal.fire('Success!', response.message, 'success');
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function() {
                        Swal.fire('Error', 'Failed to save settings.', 'error');
                    },
                    complete: function() {
                        spinner.hide();
                        submitBtn.prop('disabled', false);
                    }
                });
            });
        });
    </script>
