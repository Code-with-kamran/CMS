@model Treatment
@{
    ViewData["Title"] = Model.TreatmentId == 0 ? "Créer un traitement" : "Modifier le traitement";
    bool isEdit = Model.TreatmentId > 0;
}

<div class="main-wrapper">
    <div class="page-wrapper m-0">
        <div class="content">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
                <a asp-controller="Treatment" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i>Retour à la liste
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Upsert" method="post" enctype="multipart/form-data">
                        <input asp-for="TreatmentId" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Nom du traitement <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" placeholder="Saisir le nom du traitement" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label">Catégorie</label>
                                    <input asp-for="Category" class="form-control" placeholder="Saisir la catégorie" />
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UnitPrice" class="form-label">Prix (€) <span class="text-danger">*</span></label>
                                    <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0.01" placeholder="0,00" />
                                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DurationMinutes" class="form-label">Durée (minutes)</label>
                                    <input asp-for="DurationMinutes" class="form-control" type="number" min="1" placeholder="30" />
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Saisir la description du traitement"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Traitement actif
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-device-floppy me-1"></i>
                                @(isEdit ? "Mettre à jour" : "Créer le traitement")
                            </button>
                            <a asp-controller="Treatment" asp-action="Index" class="btn btn-secondary">
                                <i class="ti ti-x me-1"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}