@using CMS
@using CMS.Models
@using System.Security.Claims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IHttpContextAccessor ctx

@using Microsoft.AspNetCore.Http 
@inject IHttpContextAccessor ctx

@functions
{
    public bool IsInRole(string role)
        => ctx.HttpContext?.User?.IsInRole(role) == true;

    public bool CanSee(params string[] roles)
        => roles.Any(r => ctx.HttpContext?.User?.IsInRole(r) == true);
}
@{ throw new Exception("_ViewImports was compiled"); }